---

<section class="workshops-section">
  <div class="workshop-header">
    <div class="workshop-date">
      <p>Fecha</p>
      <p>Hora</p>
    </div>
    <div class="workshop-charlista">
      <p class="1">Workshop</p>
      <p class="2">Charlista</p>
    </div>
    <div class="workshop-language-equipment">
      <p>Idioma</p>
      <p>Equipamiento</p>
    </div>
  </div>
  <div class="workshop-wrapper">
    {
      workshops.map(workshop => (
        <WorkshopCard
          link={workshop.link}
          date={workshop.date}
          hour={workshop.hour}
          workshopTitle={workshop.workshopTitle}
          speakers={workshop.speakers}
          language={workshop.language}
          equipment={workshop.equipment}
        />
      ))
    }
  </div>
</section>

<style>
  .workshop-header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    /*gap: 24px; */
    color: #727171;

    .workshop-date {
      display: flex;
      flex-direction: row;
      gap: 72px;
      margin-left: 24px;
    }

    .workshop-charlista {
      display: flex;
      flex-direction: row;

      p:first-child {
        width: 438px;
      }

      p:last-child {
        width: 310px;
      }
    }

    .workshop-language-equipment {
      display: flex;
      flex-direction: row;
      gap: 24px;
      margin-right: 24px;
    }
  }

  .workshop-wrapper {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  @media (max-width: 1110px) {
    .workshop-header {
      .workshop-charlista {
        gap: 120px;
        p:first-child {
          width: 190px;
        }

        p:last-child {
          width: 125px;
        }
      }
    }
  }

  @media (max-width: 1020px) {
    .workshop-header {
      display: none;
    }
  }
</style>
