---
import Button from '@components/Button.astro';
import RadiusGradientFrame from '@components/RadiusGradientFrame.astro';
---

<section class="sponsors">
  <div class="sponsors-info">
    <img src="/assets/volcan-info-sponsors.avif" alt="Volcán Osorno" />
    <div class="sponsors-desc">
      <h2>Nuestros sponsors</h2>
      <p>
        Lorem ipsum dolor sit amet consectetur. Sapien suspendisse semper ultrices scelerisque.
        Lobortis justo commodo sit mauris amet ac.
      </p>
      <Button color="white" icon="star" link="/sponsors">Quiero ser sponsor</Button>
    </div>
  </div>
  <RadiusGradientFrame class="sponsors-principal">
    <div class="principal-title">
      <img src="/assets/gold-sponsor.avif" alt="Gold Sponsor" />
      <h2>Gold Sponsor</h2>
    </div>
    <img src="/assets/AudienceView-Logo.avif" alt="AudienceView" />
    <Button variant="ghost" link="#" icon="arrow-up-right">Ver más</Button>
  </RadiusGradientFrame>
</section>

<style>
  .sponsors {
    width: 100%;
    max-width: 71rem;
    margin: 8rem auto;
    display: flex;
    justify-content: space-between;
    align-items: center;

    & .sponsors-info {
      display: flex;
      align-items: center;
      max-width: 535px;
      gap: 4rem;
      padding: 2rem 0;

      & p {
        margin-bottom: 2rem;
      }
    }

    & .sponsors-principal {
      --border-color: linear-gradient(180deg, #2a2401 0%, #9a8025 39.57%, #ede060 100%);
      --border-width: 2px;
      --shadow: 0px 4px 85.3px rgba(85, 85, 46, 0.1);
      --radius: 20px;

      @media (width <= 768px) {
        --shadow: 0px 4px 85.3px rgba(64, 64, 64, 0.1);
        --radius: 10px;
        --border-color: linear-gradient(
          90deg,
          #090907 46.45%,
          #1d1b0e 63.08%,
          #413e21 78.39%,
          #aaa255 86.07%
        );

        background:
          linear-gradient(90deg, var(--bg-color), var(--bg-color)) padding-box,
          var(--gradient-2) border-box;
      }
    }

    & .sponsors-principal {
      display: flex;
      flex-direction: column;
      justify-content: space-around;
      align-items: center;
      height: 300px;
      width: 556px;
      box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);

      background: linear-gradient(0.07deg, rgba(80, 72, 29, 0.2) 0.03%, rgba(0, 0, 0, 0) 95.96%),
        radial-gradient(
          95.25% 166.54% at 98.39% 2.85%,
          rgba(54, 53, 38, 0.62) 8%,
          rgba(9, 9, 7, 0) 80%
        );

      & .principal-title {
        display: flex;
        align-items: center;
      }

      & h2 {
        margin: 0;
      }

      & img {
        max-width: 260px;
      }
    }
  }

  @media (width <= 768px) {
    .sponsors {
      display: flex;
      flex-direction: column;
      gap: 2rem;
      margin: 3rem 0;

      & .sponsors-info {
        width: 100%;
        gap: 1rem;
      }

      & .sponsors-principal {
        width: 100%;
      }
    }
  }
</style>
