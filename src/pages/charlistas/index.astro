---
import HeroSpeakers from '@sections/charlistas/HeroSpeakers.astro';
import SpeakersTab from '@sections/charlistas/SpeakersTab.astro';
import WorkshopsTab from '@sections/charlistas/WorkshopsTab.astro';
import TabsSchedule from '@components/TabsSchedule.astro';
import Layout from '@layouts/Layout.astro';
---

<Layout
  title="JSConf Chile 2024 | Charlistas"
  description="Conoce a los charlistas de JSConf Chile 2024. Descubre a los expertos en JavaScript y desarrollo web que estarán compartiendo sus conocimientos del 5 al 7 de diciembre en Santiago. ¡Explora sus perfiles y temas!"
>
  <HeroSpeakers />
  <TabsSchedule
    data={[
      {
        status: 'open',
        Content: SpeakersTab,
        triggerTitle: 'Charlistas'
      },
      {
        status: 'closed',
        Content: WorkshopsTab,
        triggerTitle: 'Workshops'
      }
    ]}
  />
</Layout>
